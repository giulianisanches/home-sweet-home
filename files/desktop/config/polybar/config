[colors]
# color reference: https://ethanschoonover.com/solarized/
base03 = #002b36
base02 = #073642

base1   = #93a1a1
base0  = #839496
base00 = #657b83
base01 = #586e75

yellow  = #b58900
orange  = #cb4b16
red     = #dc322f
magenta = #d33682
violet  = #6c71c4
blue    = #268bd2
cyan    = #2aa198
green   = #859900

[section/base]
width = 100%
height = 25

line-size = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "Noto Sans:size=10"

background = ${colors.base03}
foreground = ${colors.base1}

[bar/primary]
monitor = ${env:PRIMARY_MONITOR}
inherit = section/base 

modules-left = wired-network wireless-network
modules-center = i3
modules-right = xkeyboard battery date

tray-position = right

[bar/simple]
monitor = ${env:SECONDARY_MONITOR}
inherit = section/base 

modules-center = i3

[module/i3]
type = internal/i3
format = <label-state> <label-mode>

pin-workspaces = true

label-visible = %index%
label-visible-background = ${colors.base1}
label-visible-foreground = #ffffff
label-visible-padding = 2

label-focused = %index%
label-focused-background = ${colors.blue}
label-focused-foreground = #ffffff
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-padding = 2
label-unfocused-background = ${colors.base01}
label-unfocused-foreground = ${colors.base03}

label-urgent = %index%
label-urgent-background = ${colors.orange}
label-urgent-underline = ${colors.red}
label-urgent-padding = 2

[module/pulseaudio]
type = internal/pulseaudio

use-ui-max = false

label-muted = muted
label-muted-foreground = #666

label-volume-underline = ${colors.green}
label-muted-underline = ${colors.red}

; Interval for volume increase/decrease (in percent points)
; Default: 5
interval = 5

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 95

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC

poll-interval = 5

label-charging = > %percentage%%
label-discharging = < %percentage%%
label-full = F %percentage%%

label-charging-underline = ${colors.yellow}
label-discharging-underline = ${colors.yellow}
label-full-underline = ${colors.green}

[module/xkeyboard]
type = internal/xkeyboard

; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock

label-layout = %layout%
label-layout-padding = 2
label-layout-underline = ${colors.violet}

[module/date]
type = internal/date

; Seconds to sleep between updates
interval = 1.0

date = %a, %d %B %Y
time = %H:%M

label = %date% %time%
label-underline = ${colors.violet}

[module/wired-network]
type = internal/network
interface = eth0
label-connected = %local_ip% %local_ip6%
label-connected-underline = ${colors.cyan}

[module/wireless-network]
type = internal/network
interface = wlan0
label-connected = %local_ip% %local_ip6% %essid%
label-connected-underline = ${colors.cyan}
