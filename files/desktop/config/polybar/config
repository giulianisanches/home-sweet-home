[colors]
# color reference: https://ethanschoonover.com/solarized/
base03 = #002b36
base02 = #073642

base1   = #93a1a1
base0  = #839496
base00 = #657b83
base01 = #586e75

yellow  = #b58900
orange  = #cb4b16
red     = #dc322f
magenta = #d33682
violet  = #6c71c4
blue    = #268bd2
cyan    = #2aa198
green   = #859900

[section/base]
width = 100%
height = 25

line-size = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "Noto Sans:size=11"

background = ${colors.base02}
foreground = ${colors.base1}

[bar/primary]
monitor = ${env:PRIMARY_MONITOR}
inherit = section/base 

modules-left = i3
modules-center = date
modules-right = battery

tray-position = right

[bar/simple]
monitor = ${env:SECONDARY_MONITOR}
inherit = section/base 

modules-left = i3
modules-center = date

[module/i3]
type = internal/i3
format = <label-state> <label-mode>

pin-workspaces = true

label-visible = %index%
label-visible-background = ${colors.base1}
label-visible-foreground = #ffffff
label-visible-padding = 2

label-focused = %index%
label-focused-background = ${colors.blue}
label-focused-foreground = #ffffff
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-padding = 2
label-unfocused-background = ${colors.base01}
label-unfocused-foreground = ${colors.base03}

label-urgent = %index%
label-urgent-padding = 2

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 95

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC

poll-interval = 5

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

label-charging-underline = ${colors.base1}
label-discharging-underline = ${colors.base1}
label-full-underline = ${colors.base1}

[module/date]
type = internal/date

; Seconds to sleep between updates
interval = 1.0

date = %b, %d %a %Y
time = %H:%M

label = %date% %time%
label-underline = ${colors.base1}